{
  "compilerOptions": {
    "target": "ES2018",
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "noEmit": true,
    "outDir": "dist",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    // "noImplicitAny": true,
    "baseUrl": ".",
    "rootDir": ".",
    // supersedes other type declarations; says look at the types declared in this folder first
    "paths": {
      "*": ["types/*"]
    }
    // "typeRoots": ["./types"],
  },
  "include": [
    "src",
    "tests",
    "types",
    ".eslintrc.js",
    "jest.config.js"
  ]
}
